{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {

      "FirewallVmInstanceSize": { "value" : "Standard_D3_v2_Promo"},

      "ScaleSetName": { "value": "<ScaleSetName>" },
      "instanceCount": { "value": 2 },

      "adminUsername": {
        "reference": {
            "keyVault": {
                "id": "/subscriptions/<subscriptionID>/resourceGroups/<KeyVaultResourceGroupName/providers/Microsoft.KeyVault/vaults/<KeyVaultName>"
            },
            "secretName": "<SecretNameWithPANAdminUsername>"
        } 
      },
      "adminPassword": {
        "reference": {
          "keyVault": {
            "id": "/subscriptions/<subscriptionID>/resourceGroups/<KeyVaultResourceGroupName/providers/Microsoft.KeyVault/vaults/<KeyVaultName>"
            },
          "secretName": "<SecretNameWithPANAdminPassword>"
        }
      },

      "loadBalancerFrontEndIPAddress" : { "value": "<LoadBalancerFrontEndIPAddress>"},

      "firewallTrafficSubnetID" : { 
        "value": "/subscriptions/<subscriptionID>/resourceGroups/<VNETResourceGroupName>/providers/Microsoft.Network/virtualNetworks/<VNETName>/subnets/<FirewallSubnetName>"
      },
      "firewallManagementSubnetID" : { 
        "value": "/subscriptions/<subscriptionID>/resourceGroups/<VNETResourceGroupName>/providers/Microsoft.Network/virtualNetworks/<VNETName>/subnets/<ManagementInterfaceSubnetName>"
      },
      "loadBalancerFrontEndSubnetID" : { 
        "value": "/subscriptions/<subscriptionID>/resourceGroups/<VNETResourceGroupName>/providers/Microsoft.Network/virtualNetworks/<VNETName>/subnets/<LoadBalancerFrontEndSubnetName>"
      }
    }
  }